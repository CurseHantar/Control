<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    android:background="@drawable/geometrico"
    tools:context=".LoginActivity">


    <Button
        android:id="@+id/btnSeleccionar"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_x="35dp"
        android:layout_y="558dp"
        android:background="@color/white2"
        android:fontFamily="sans-serif-condensed"
        android:onClick="irDisposi"
        android:text="Iniciar"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistrarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_marginBaseline="@dimen/_30ssp" />

    <EditText
        android:id="@+id/usuarioTxt"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_x="41dp"
        android:layout_y="343dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:maxLength="20"
        android:fontFamily="sans-serif-light"
        android:hint="Escriba su usuario..."
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/contraTxt"
        android:layout_width="334dp"
        android:layout_height="48dp"
        android:layout_below="@+id/usuarioTxt"
        android:layout_centerHorizontal="true"
        android:layout_x="42dp"
        android:layout_y="404dp"
        android:background="@color/white"
        android:ems="10"
        android:maxLength="30"
        android:fontFamily="sans-serif-light"
        android:hint="escriba su contraseña..."

        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="335dp"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
        android:layout_x="87dp"
        android:layout_y="35dp"
        android:background="@color/grey"
        android:fontFamily="sans-serif-light"
        android:text="Usuario"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="335dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:layout_x="87dp"
        android:layout_y="35dp"
        android:background="@color/grey"
        android:fontFamily="sans-serif-light"
        android:text="Contraseña"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuarioTxt"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="406dp"
        android:layout_height="52dp"
        android:background="@color/white2"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="Bienvenido!!"
        android:textColor="@color/white"

        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/btnRegistrarse"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/underline_shape"
        android:clickable="true"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:minHeight="48dp"
        android:onClick="irAct2"
        android:outlineSpotShadowColor="@color/black"
        android:padding="5dp"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDisposi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/buttonDisposi"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/underline_shape"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:minHeight="48dp"
        android:onClick="irDisposi"
        android:outlineSpotShadowColor="@color/black"
        android:padding="5dp"
        android:text="Saltar"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>