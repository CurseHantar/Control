<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CompleteControl" parent="android:Theme.Material.Light.NoActionBar" />

    <item name="colorPrimary" type="color">@color/color_primary</item>
    <item name="colorSecundary" type="color">@color/color_secundary</item>

    <style name="DialogAnimation">

        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>

    </style>

    <style name="Theme.CompleteControl.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CompleteControl.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CompleteControl.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>